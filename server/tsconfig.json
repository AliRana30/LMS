{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build", "**/*.spec.ts", "**/*.test.ts"]
}
